<UserControl
    x:Class="DescriptionGenerator.ClassDiagramView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DescriptionGenerator"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontSize="20"
            FontWeight="Bold"
            Text="Class Diagram" />
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="0,55,0,0">
            <Canvas
                Name="DiagramCanvas"
                Background="White"
                ClipToBounds="True"
                RenderTransformOrigin="0.5,0.5" />
        </ScrollViewer>
    </Grid>
</UserControl>